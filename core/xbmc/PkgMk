# Description:
# URL:
# Maintainer:


NAME=xbmc
VERSION=14.2
PATCHES="xbmc-14.1-Helix-rpi2-target.patch"


DEPENDS=""
SOURCES="https://github.com/xbmc/xbmc/archive/14.2-Helix.tar.gz"
FILES="rc-kodi"


pkgmain() {
	#git clone git://github.com/xbmc/xbmc.git
	cd xbmc-14.2-Helix
	copy_files
	mv ${CLFS_DIR}/usr/include/event.h ${CLFS_DIR}/usr/include/org.event.h
	patch -Np1 -i ../../../xbmc-14.1-Helix-rpi2-target.patch
	./bootstrap
	export CPPFLAGS="$CPPFLAGS -I./lib/libsidplay2/libsidplay/include -I${CLFS_DIR}/usr/include"
	export CXXFLAGS="$CXXFLAGS -I./lib/libsidplay2/libsidplay/include -I${CLFS_DIR}/usr/include"
	CFLAGS="-I${CLFS_DIR}/opt/vc/include -I${CLFS_DIR}/opt/vc/include/interface/vcos/pthreads -I${CLFS_DIR}/opt/vc/include/interface/vmcs_host/linux -I${CLFS_DIR}/usr/include/SDL ${CFLAGS}" CXXFLAGS="-I${CLFS_DIR}/opt/vc/include -I${CLFS_DIR}/opt/vc/include/interface/vcos/pthreads -I${CLFS_DIR}/opt/vc/include/interface/vmcs_host/linux -I${CLFS_DIR}/usr/include/SDL $CXXFLAGS" LDFLAGS="-L${CLFS_DIR}/opt/vc/lib -lavcodec -lavfilter -lswresample -lavformat -lpostproc -lavutil -lswscale $LDFLAGS" ./configure --build=${CLFS_HOST} --host=${CLFS_TARGET} --prefix=/usr PYTHON=/toolsx/bin/python PYTHON_VERSION=2.7  PYTHON_CPPFLAGS="-I${CLFS_DIR}/usr/include/python2.7" PYTHON_LDFLAGS="-L${CLFS_DIR}/usr/lib/python2.7/config -lpython2.7" PYTHON_SITE_PKG="${CLFS_DIR}/usr/lib/python2.7/site-packages" PYTHON_NOVERSIONCHECK=no-check--disable-debug TINYXML_LIBS=/Pi/clfs/usr/lib TINYXML_CFLAGS=/Pi/clfs/usr/include --disable-gl --enable-gles --disable-sdl --disable-joystick --disable-x11 --disable-ssh --disable-samba --disable-dvdcss --disable-avahi --disable-mysql --disable-webserver --disable-optical-drive --with-platform=raspberry-pi --enable-player=omxplayer --disable-texturepacker 
	
	cp ../../../DVDDemuxFFmpeg.cpp xbmc/cores/dvdplayer/DVDDemuxers/.
	cp lib/libsidplay2/libsidplay/include/sidplay/event.h lib/libsidplay2/libsidplay/include/event.h

	make -j${NR_JOBS}
	make DESTDIR=${PKG} install
	mv ${CLFS_DIR}/usr/include/org.event.h ${CLFS_DIR}/usr/include/event.h
	mkdir ${PKG}/etc
	mkdir ${PKG}/etc/rc.d
	cp rc-kodi ${PKG}/etc/rc.d/.

}
