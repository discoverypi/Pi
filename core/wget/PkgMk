# Description:
# URL:
# Maintainer:


NAME=wget
VERSION=1.16.3


DEPENDS=""
SOURCES="http://ftp.gnu.org/gnu/wget/wget-1.16.3.tar.xz"


pkgmain() {
	cd ${NAME}-${VERSION}
	export CFLAGS="$CFLAGS -I${CLFS_DIR}/usr/include"
	./configure --build=${CLFS_HOST} --host=${CLFS_TARGET}		\
		--prefix=/usr 

	make -j${NR_JOBS}
	make DESTDIR=${PKG} install

}
