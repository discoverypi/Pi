# Description:
# URL:
# Maintainer:


NAME=libmodplug
VERSION=0.8.8.5


DEPENDS=""
SOURCES="http://sourceforge.net/projects/modplug-xmms/files/libmodplug/0.8.8.5/libmodplug-0.8.8.5.tar.gz"


pkgmain() {
	cd ${NAME}-${VERSION}

	./configure --build=${CLFS_HOST} --host=${CLFS_TARGET}		\
		--prefix=/usr --disable-static

	make -j${NR_JOBS}
	make DESTDIR=${PKG} install

}
